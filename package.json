{
  "name": "cold-snapshot-api",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Cold OS backend API for snapshots, contacts, and logs",
  "repository": {
    "type": "git",
    "url": "https://github.com/coldinc/cold-snapshot-api"
  },
  "license": "MIT",
  "scripts": {
    "dev": "tsup api/**/*.ts lib/**/*.ts --out-dir dist --format cjs --watch",
    "build": "tsup api/**/*.ts lib/**/*.ts --out-dir dist --format cjs --clean",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/airtable": "^0.10.0",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vercel/node": "^2.3.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
