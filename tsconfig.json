{
  // Configuration for running individual TS scripts via ts-node
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["scripts", "lib", "__tests__/**/*.ts"]
}
