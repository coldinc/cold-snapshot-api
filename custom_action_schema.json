                  "contacts": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "threadLinked": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "threadId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
